der Arbeitgeber, = :: работодатель
der Arbeitnehmer, = :: работник
der Arbeitsplatz, ¨-e :: рабочее место
der Betrieb, -e :: предприятие
der Fachmann, -leute :: профессионал
der Lebenslauf, ¨-e :: автобиография
der Lohn, ¨-e :: зарплата (рабочего)
der Vertrag, ¨-e :: договор, контракт
der Kollege, -n :: коллега
die Ausbildung, -en :: образование
die Bewerbung, -en :: резюме, заявление о приеме на работу
die Dienstreise, -n :: командировка
die Erfahrung, -en :: опыт
die Fähigkeit, -en :: способность
die Karriere, -n :: карьера
die Kenntnis, -se :: знание
die Stelle, -n :: место (работы), должность
die Tätigkeit, -en :: деятельность
die Überstunde, -n :: сверхурочная работа
das Gehalt, ¨-er :: зарплата (служащего), оклад
das Geschäft, -e :: 1. дело, бизнес; 2. магазин
das Team, -s :: команда
das Unternehmen, = :: предприятие
das Vorstellungsgespräch, -e :: собеседование
das Zeugnis, -se :: аттестат
