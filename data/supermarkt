das Kilo :: килограмм
das Netz, -e :: сетка (овощей, фруктов)
das Obst :: фрукты
das Regal, -e :: стеллаж, полка
das Stück, -e :: кусок
der Ausgang,  ̈-e :: выход
der Eingang,  ̈-e :: вход
der Käufer, = :: покупатель
der Liter, = :: литр
der Preis, -e :: цена
der Supermarkt,  ̈-e :: супермаркет
der Verkäufer, = :: продавец
die Dose, -n :: банка (металлическая)
die Flasche, -n :: бутылка
